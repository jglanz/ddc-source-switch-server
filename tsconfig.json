{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "lib",
    "strict": false,
    // "alwaysStrict": false,
    // "noImplicitUseStrict": true,
    // "ignoreDeprecations": "5.0",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators":true,
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.*"
  ]
}